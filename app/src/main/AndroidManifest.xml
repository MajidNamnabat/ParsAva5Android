<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.khanenoor.parsavatts"
    android:requestLegacyExternalStorage="true"
    android:versionCode="4125"
    android:versionName="4.125">
    <!-- in espeak ng what was its use ? -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.OPEN_DOCUMENT" />
            <category android:name="android.intent.category.OPENABLE" />
        </intent>
    </queries> <!-- Permissions from TalkBack keyboard's AndroidManifest.xml -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <application
        android:name=".ExtendedApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/parsava"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/parsava_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParsAvaTTS"
        tools:targetApi="31">
        <activity
            android:name=".activities.AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".SupportActivity"
            android:exported="false"
            android:label="@string/title_activity_support"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.VoiceSettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_voice_settings"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.PunctuationsActivity"
            android:exported="false"
            android:label="@string/punctuaions_header"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.LicenseActivity"
            android:exported="false"
            android:label="@string/license_title"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.SaveToFileActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:label="@string/save_to_file_title"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.EmojiSettingsActivity"
            android:exported="false"
            android:label="@string/emoji_setting_header"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.NumberLanguageActivity"
            android:exported="false"
            android:label="@string/number_digits_header"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.NumbersActivity"
            android:exported="false"
            android:label="@string/number_header"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.UserDictWordListActivity"
            android:exported="false"
            android:label="@string/userdict_wordlist_header"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.UserDictNEWordActivity"
            android:exported="false"
            android:label="@string/userdict_neword_header"
            android:theme="@style/Theme.ParsAvaTTS" />
        <activity
            android:name=".activities.UserDictionaryManageActivity"
            android:exported="false"
            android:label="@string/user_dictionary_manage_header"
            android:theme="@style/Theme.ParsAvaTTS" />
        <!--
        <service
            android:name=".persianTts.TtsService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/persian_tts_name"
            android:permission="TODO"
            tools:ignore="ExportedService">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.TTS_SERVICE" />

                <category android:name="android.intent.category.SECOND" />
            </intent-filter>
        </service>
        -->
        <service
            android:name=".ttsService.DualTtsService"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter android:priority="100"
                android:foregroundServiceType="mediaPlayback">
                <action android:name="android.intent.action.TTS_SERVICE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.speech.tts"
                android:resource="@xml/tts_engine" />
        </service>

        <activity
            android:name=".engine.DownloadVoiceData"
            android:exported="true"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.speech.tts.engine.INSTALL_TTS_DATA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".engine.CheckVoiceData"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.speech.tts.engine.CHECK_TTS_DATA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".engine.GetSampleText"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.speech.tts.engine.GET_SAMPLE_TEXT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TtsSettingsActivity"
            android:exported="true"
            android:label="@string/tts_settings_label"
            tools:ignore="ExportedPreferenceActivity">
            <intent-filter>
                <action android:name="android.speech.tts.engine.CONFIGURE_ENGINE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ParsAvaActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".engine.ParsAva"
            android:enabled="true"
            android:exported="true"
            android:hasCode="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.START_TTS_ENGINE" />

                <category android:name="android.intent.category.tts_engine.PARSAVA" />
                <category android:name="android.intent.category.tts_lang.fas" />
                <category android:name="android.intent.category.tts_lang.eng" />
                <category android:name="android.intent.category.tts_lang.eng.USA" />
                <category android:name="android.intent.category.tts_lang.eng.GBR" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".receivers.TtsQueueCompletedReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="TextToSpeech.ACTION_TTS_QUEUE_PROCESSING_COMPLETED" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".providers.SettingsProvider"
            android:authorities="com.khanenoor.parsavatts.providers.SettingsProvider"
            android:exported="true"
            tools:ignore="ExportedContentProvider" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.khanenoor.parsavatts.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>
