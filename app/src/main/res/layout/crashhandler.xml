<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:id="@+id/mainLayout" android:layout_height="fill_parent">
    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/txtView" android:text="" android:textSize="18sp" android:padding="5sp" android:layout_alignParentTop="true" />
    <CheckBox android:id="@+id/forget" android:text="" android:layout_width="fill_parent" android:layout_height="wrap_content" android:checked="true" android:layout_marginLeft="5sp" android:layout_marginTop="5sp" android:layout_marginBottom="5sp"/>
    <LinearLayout android:orientation="horizontal" android:padding="5sp" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:layout_height="wrap_content" android:id="@+id/report" android:text="" android:layout_width="wrap_content" android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle" />
        <Button android:layout_height="wrap_content" android:id="@+id/close" android:text="" android:layout_width="wrap_content" android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>